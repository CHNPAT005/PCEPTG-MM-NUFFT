save("Computed Data/Accuracy/CFTaccFKRENH.jld", "CFTaccFKRENH", CFTaccFKRENH)
# save("Computed Data/Accuracy/ZFFTaccFKRENyq.jld", "ZFFTaccFKRENyq", ZFFTaccFKRENyq)
